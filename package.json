{
  "name": "Kindle-Companion",
  "description": "",
  "private": true,
  "author": {
		"name": "Sahar Zelonagora",
		"email": "saharzelonagora@gmail.com"
	},
  "version": "1.0.0",
  "main": "packages/main/dist/index.cjs",
  "build": {
    "appId": "io.sahar10501.github.kindle-companion",
    "extends": null,
    "linux": {
      "synopsis": "Kindle Clippings and vocabulary Manager",
      "icon": "",
      "category": "Development",
      "target": [
        "deb",
        "snap"
      ]
    }
  },
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compileAll": "cross-env MODE=production npm run build && electron-builder -mw --config .electron-builder.config.js --dir --config.asar=false",
    "compile": "cross-env MODE=production npm run build && electron-builder build --publish=never",
    "watch": "node scripts/watch.mjs",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "electron": "20.1.3",
    "electron-builder": "23.3.3",
    "unplugin-auto-expose": "0.0.3",
    "vite": "3.1.0"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^2.1.0",
    "electron-updater": "5.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.6",
    "vite-plugin-svgr": "^2.4.0"
  },
  "license": ""
}
